<table class="table table-striped table-bordered">
  <thead class="bg-primary">
  <tr>
    <th  id="player-name"  data-reflex="click->Contact#sort" data-column="name" data-direction="asc">
      <span>Name</span>
    </th>
    <th>Email</th>
    <th>Active</th>
    <th>Age</th>
    <th>Created</th>
  </tr>
  </thead>

  <tbody>
  <% contacts.each do |contact| %>
    <tr>
      <td>
        <%= contact&.name %>
      </td>
      <td><%=contact&.email %></td>
      <td><%=contact&.active %></td>
      <td><%=contact&.age %></td>
      <td><%=contact&.created_at&.to_formatted_s(:short) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
