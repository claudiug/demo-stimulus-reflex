<table class="table table-striped table-bordered">
  <thead class="bg-primary">
  <tr>
    <th  id="player-name">
      <span>Name</span>
    </th>
    <th>Email</th>
    <th>Active</th>
    <th>Age</th>
    <th>Created</th>
  </tr>
  </thead>

  <tbody>
  <% players.each do |player| %>
    <tr>
      <td>
        <%= player&.name %>
      </td>
      <td><%=player&.email %></td>
      <td><%=player&.active %></td>
      <td><%=player&.age %></td>
      <td><%=player&.created_at&.to_formatted_s(:short) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
